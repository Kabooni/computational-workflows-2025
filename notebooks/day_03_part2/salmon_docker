FROM debian:bullseye-slim

LABEL image.author.name="yourname"
LABEL image.author.email="yourmail"

# Install dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
        tar && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /opt

# Download and extract Salmon
RUN curl -L -o salmon.tar.gz \
      https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz && \
    tar -xzf salmon.tar.gz && \
    rm salmon.tar.gz && \
    mv salmon-1.5.2_linux_x86_64 salmon

# Add Salmon to PATH
ENV PATH="/opt/salmon/bin:${PATH}"

# Set default command to print Salmon version
CMD ["salmon", "--version"]
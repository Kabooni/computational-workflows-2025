FROM debian:bullseye-slim

LABEL image.author.name="yourname"
LABEL image.author.email="yourmail"

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    tar \
    gzip \
    bzip2

# Set the PATH environment variable (to /usr/bin)
ENV PATH=/usr/bin
ENV SALMON_VERSION=1.5.2

# Download and install Salmon
RUN curl -L -o salmon.tar.gz \
    https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz && \
    /bin/tar -xzf salmon.tar.gz && \
    mv Salmon-latest_linux_x86_64 /opt/salmon && \
    ln -s /opt/salmon/bin/salmon /usr/bin/salmon && \
    rm salmon.tar.gz


CMD ["salmon", "--help"]